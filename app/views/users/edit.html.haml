%h1 Edit your profile

.profile
  = form_for @user, url: user_path do |f|
    %ul.stacked
      = field_li f, :name, {skip_tooltip: true, li_options: {class: "width_a"}}
      = field_li f, :email, {skip_tooltip: true, li_options: {class: "width_a"}}
      = field_li f, :phone, {skip_tooltip: true, li_options: {class: "width_a"}}
    = partner_rollover_button("update", "update")

    %ul.stacked
      %li
        %h2 Leave passwords blank if you do not want to change your password
    %ul.stacked
      = field_li f, :password, {skip_tooltip: true, li_options: {class: "width_a"}, field_options: {type: "password"}}
      = field_li f, :password_confirmation, {skip_tooltip: true, li_options: {class: "width_a"}, field_options: {type: "password"}}

    = partner_rollover_button("update", "update")
