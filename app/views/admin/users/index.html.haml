- @nav_class[:users] = :current
= render :partial=>"admin/shared/admin_nav"

%h1 Users

%h2 Find user by email 

= form_tag admin_partners_path, method: :get do
  = text_field_tag :email
  = submit_tag "Find"

%br
%br

= will_paginate @partners 
%br
%br
%table#users
  %thead
    %tr
      %th ID
      %th Name
      %th Phone
      %th Email
      %th Impersonate
      %th Organizations
      
  %tbody
    - @users.each do |user|
      %tr{class: "partner-#{user.id}"}
        %td= user.id
        %td
          = link_to user.name || user.email, edit_admin_user_path(user)
        %td= user.phone
        %td= user.email
        %td
          = link_to "Impersonate #{user.email}", impersonate_admin_user_path(user) 
        %td
          - user.partners.each do |partner|
            %span.partner-link= link_to partner.organization, admin_partner_path(partner)
            
        
= will_paginate @users
